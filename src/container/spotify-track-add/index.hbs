{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}
<main class='main'>
  {{#with data}}
    <div class='main__content'>
      <h1 class='title title--center'>{{name}}</h1>
      {{! <a href='#' class='add-button'>
        <img src='/svg/add_button.svg' />
        Додати до плейліста
      </a> }}
      <ul class='track-list'>
        {{#each tracks}}
          <li class='track'>
            <img src='{{image}}' alt='{{name}}' />
            <div class='track__content'>
              <strong class='track__name'>{{name}}</strong>
              <em class='track__author'>{{author}}</em>
            </div>
            
             <form action="/spotify-track-add" method="POST">
                <input type="hidden" name="playlistId" value="{{../playlistId}}">
                <input type="hidden" name="trackId" value="{{id}}">
                <button type="submit">
                   <img src="/svg/track_add_button.svg">
                </button>

             </form>

          </li>
        {{/each}}
      </ul>
    </div>
  {{/with}}
</main>
