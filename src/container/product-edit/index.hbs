{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<main>

  <section class='form'>

    <h1 class='form__title'>Редагування товару</h1>
    {{#with data}}
      <form method='POST' action='/product-edit'>

        <div class='form__content'>

          <div class='form__card'>

            <div class='form__card__body'>

              <h5 class='form__card__title'>Інформація про
                товар</h5>

              <div class='form__f1'>

                <div class='form__field'>

                  <label
                    for='name'
                    class='form__label'
                  >Назва товару</label>

                  <input
                    type='name'
                    name='name'
                    value='{{name}}'
                    class='form__input'
                  />

                </div>
                <div class='form__field'>
                  <label
                    for='price'
                    class='form__label'
                  >Ціна</label>

                  <input
                    type='price'
                    name='price'
                    value='{{price}}'
                    class='form__input'
                  />

                </div>
                <div class='form__field'>
                  <label
                    for='price'
                    class='form__label'
                  >ID</label>
                  <input
                    type='id'
                    name='id'
                    value='{{id}}'
                    class='form__input'
                  />
                </div>
              </div>
              <div class='form__field'>
                <label
                  for='description'
                  class='form__label'
                >Короткий опис товару</label>
                <input
                  type='description'
                  name='description'
                  class='form__input2'
                  value='{{description}}'
                />

                <div class='form__button__double'>
                  <button
                    class='form__button__primary'
                  >Зберегти оновлення</button>
                  <a
                    href='product-delete?id={{id}}'
                    class='form__button__danger'
                  >Видалити товар</a>

                </div>

              </div>

            </div>

          </div>

        </div>

      </form>
    {{/with}}
  </section>

</main>

